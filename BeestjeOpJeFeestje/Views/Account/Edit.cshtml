@model BeestjeOpJeFeestje.Models.User

@{
    ViewData["Title"] = "Edit";
}

<h1>Kaart geven</h1>

<h4>Gebruiker</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Name" />
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="NormalizedEmail" />
            <input type="hidden" asp-for="PhoneNumber" />
            <input type="hidden" asp-for="UserName" />
            <input type="hidden" asp-for="NormalizedUserName" />
            <input type="hidden" asp-for="NormalizedEmail" />
            <input type="hidden" asp-for="PasswordHash" />
            <input type="hidden" asp-for="SecurityStamp" />
            <input type="hidden" asp-for="ConcurrencyStamp" />
            <input type="hidden" asp-for="LockoutEnabled"/>
            <input type="hidden" asp-for="Adres" />
            <div class="form-group">
                <label asp-for="Card" class="control-label"></label>
                <select asp-for="Card" class="form-control">
                    <option value="zilveren">zilveren</option>
                    <option value="gouden">gouden</option>
                    <option value="platina">platina</option>
                </select>
                <span asp-validation-for="Card" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
